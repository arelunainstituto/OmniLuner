{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "paths": {
      "@areluna/core": ["../packages/core/src"],
      "@areluna/core/*": ["../packages/core/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "seeds/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "migrations"
  ]
}