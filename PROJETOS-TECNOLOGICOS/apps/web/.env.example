# Database
DATABASE_URL="postgresql://username:password@localhost:5432/areluna_erp?schema=public"
PRISMA_ACCELERATE_URL="prisma://accelerate.prisma-data.net/?api_key=your_accelerate_key"

# Authentication
AUTH_SECRET="your-auth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Azure AD Configuration
AZURE_AD_CLIENT_ID="your-azure-ad-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-ad-client-secret"
AZURE_AD_TENANT_ID="your-azure-ad-tenant-id"

# Microsoft Graph
GRAPH_TENANT="your-graph-tenant-id"
GRAPH_CLIENT_ID="your-graph-client-id"
GRAPH_CLIENT_SECRET="your-graph-client-secret"

# Evolution API (WhatsApp)
EVOLUTION_API_KEY="your-evolution-api-key"
EVOLUTION_API_URL="https://your-evolution-api-url.com"

# Zoho CRM
ZOHO_CLIENT_ID="your-zoho-client-id"
ZOHO_CLIENT_SECRET="your-zoho-client-secret"
ZOHO_REFRESH_TOKEN="your-zoho-refresh-token"

# Vercel Blob Storage
VERCEL_BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="areluna-group"
SENTRY_PROJECT="erp-web"

# Vercel Edge Config
EDGE_CONFIG="your-edge-config-url"

# Application
NEXT_PUBLIC_APP_NAME="AreLuna ERP"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_MONITORING="true"
NEXT_PUBLIC_ENABLE_BETA_FEATURES="false"

# Email (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@areluna.com"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# Node Environment
NODE_ENV="development"